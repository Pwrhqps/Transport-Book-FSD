@page "/auth/register"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Components.Forms
@using System.ComponentModel.DataAnnotations
@using Transport_Book_FSD.Data
@using Transport_Book_FSD.Models

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject NavigationManager Nav
@inject AppDbContext db

<h3>Register</h3>

<div class="row">
    <div class="col-md-6">
        <EditForm Model="form" OnValidSubmit="RegisterUser">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label class="form-label">Register As</label>
                <div>
                    <InputRadioGroup @bind-Value="form.Role" name="Role">
                        <label class="me-3">
                            <InputRadio Value="@("Passenger")" /> Passenger
                        </label>
                        <label>
                            <InputRadio Value="@("Driver")" /> Driver
                        </label>
                    </InputRadioGroup>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <InputText class="form-control" @bind-Value="form.Email" />
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <InputText class="form-control" type="password" @bind-Value="form.Password" />
            </div>

            <div class="mb-3">
                <label class="form-label">Confirm Password</label>
                <InputText class="form-control" type="password" @bind-Value="form.ConfirmPassword" />
            </div>

            @if (form.Role == "Driver")
            {
                <div class="mb-3">
                    <label class="form-label">Phone Number</label>
                    <InputText class="form-control" @bind-Value="form.PhoneNumber" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Vehicle Type</label>
                    <InputText class="form-control" @bind-Value="form.VehicleType" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Vehicle Model</label>
                    <InputText class="form-control" @bind-Value="form.VehicleModel" />
                </div>

                <div class="mb-3">
                    <label class="form-label">License Plate Number</label>
                    <InputText class="form-control" @bind-Value="form.LicensePlate" />
                </div>

                <div class="mb-3">
                    <label class="form-label">License Number</label>
                    <InputText class="form-control" @bind-Value="form.LicenseNumber" />
                </div>
            }

            <button class="btn btn-dark" type="submit">Register</button>
            <a class="btn btn-outline-dark ms-2" href="/auth/login">Login</a>
        </EditForm>

        @if (!string.IsNullOrEmpty(errorMsg))
        {
            <div class="text-danger mt-3">@errorMsg</div>
        }
    </div>
</div>

@code {
    private RegisterForm form = new();
    private string? errorMsg;

    private async Task RegisterUser()
    {
        errorMsg = null;

        if (form.Password != form.ConfirmPassword)
        {
            errorMsg = "Password and Confirm Password must match.";
            return;
        }

        if (form.Role == "Driver")
        {
            if (string.IsNullOrWhiteSpace(form.PhoneNumber) ||
                string.IsNullOrWhiteSpace(form.VehicleType) ||
                string.IsNullOrWhiteSpace(form.VehicleModel) ||
                string.IsNullOrWhiteSpace(form.LicensePlate) ||
                string.IsNullOrWhiteSpace(form.LicenseNumber))
            {
                errorMsg = "Please fill in Phone Number, Vehicle Type, Vehicle Model, License Plate Number, and License Number.";
                return;
            }
        }

        var user = new ApplicationUser
        {
            UserName = form.Email,
            Email = form.Email,
            PhoneNumber = form.PhoneNumber,
            VehicleType = form.VehicleType,
            LicensePlate = form.LicensePlate
        };

        var result = await UserManager.CreateAsync(user, form.Password);
        if (!result.Succeeded)
        {
            errorMsg = string.Join(" | ", result.Errors.Select(e => e.Description));
            return;
        }

        var roleResult = await UserManager.AddToRoleAsync(user, form.Role);
        if (!roleResult.Succeeded)
        {
            errorMsg = string.Join(" | ", roleResult.Errors.Select(e => e.Description));
            return;
        }

        // Create DriverProfile so Staff page can see details
        if (form.Role == "Driver")
        {
            var exists = db.DriverProfiles.FirstOrDefault(d => d.UserId == user.Id);
            if (exists == null)
            {
                db.DriverProfiles.Add(new DriverProfile
                {
                    UserId = user.Id,
                    FullName = user.Email ?? "Driver",
                    ContactNumber = form.PhoneNumber ?? "",
                    Gender = "Male",
                    VehicleType = form.VehicleType ?? "",
                    VehicleModel = form.VehicleModel ?? "",
                    VehiclePlate = form.LicensePlate ?? "",
                    LicenseNumber = form.LicenseNumber ?? ""
                });

                await db.SaveChangesAsync();
            }
        }

        Nav.NavigateTo("/auth/login", true);
    }

    private class RegisterForm
    {
        [Required]
        public string Email { get; set; } = "";

        [Required]
        public string Password { get; set; } = "";

        [Required]
        public string ConfirmPassword { get; set; } = "";

        public string Role { get; set; } = "Passenger";

        public string? PhoneNumber { get; set; }
        public string? VehicleType { get; set; }
        public string? VehicleModel { get; set; }
        public string? LicensePlate { get; set; }
        public string? LicenseNumber { get; set; }
    }
}
