@page "/auth/register"
@using Microsoft.AspNetCore.Identity
@using Transport_Book_FSD.Models 
@using Microsoft.AspNetCore.Components.Forms

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject NavigationManager Nav

<h3>Register</h3>

<div class="row">
    <div class="col-md-6">
        <EditForm Model="form" OnValidSubmit="RegisterUser">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label class="form-label">Email</label>
                <InputText class="form-control" @bind-Value="form.Email" />
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <InputText class="form-control" type="password" @bind-Value="form.Password" />
            </div>

            <div class="mb-3">
                <label class="form-label">Confirm Password</label>
                <InputText class="form-control" type="password" @bind-Value="form.ConfirmPassword" />
            </div>

            <div class="mb-3">
                <label class="form-label">Register As</label>
                <div>
                    <InputRadioGroup @bind-Value="form.Role">
                        <label class="me-3">
                            <InputRadio Value="@("Passenger")" /> Passenger
                        </label>
                        <label>
                            <InputRadio Value="@("Driver")" /> Driver
                        </label>
                    </InputRadioGroup>
                </div>
            </div>

            <button class="btn btn-dark" type="submit">Register</button>
            <a class="btn btn-outline-dark ms-2" href="/auth/login">Login</a>
        </EditForm>

        @if (!string.IsNullOrEmpty(errorMsg))
        {
            <div class="text-danger mt-3">@errorMsg</div>
        }
    </div>
</div>

@code {
    private RegisterForm form = new();
    private string? errorMsg;

    private async Task RegisterUser()
    {
        errorMsg = null;

        if (form.Password != form.ConfirmPassword)
        {
            errorMsg = "Password and Confirm Password must match.";
            return;
        }

        var user = new ApplicationUser
        {
            UserName = form.Email,
            Email = form.Email
        };

        var result = await UserManager.CreateAsync(user, form.Password);

        if (!result.Succeeded)
        {
            errorMsg = string.Join(" | ", result.Errors.Select(e => e.Description));
            return;
        }

        await UserManager.AddToRoleAsync(user, form.Role);

        // Auto-login after register
        await SignInManager.SignInAsync(user, isPersistent: false);

        // Redirect based on role
        if (form.Role == "Passenger")
            Nav.NavigateTo("/passenger/home", true);
        else
            Nav.NavigateTo("/driver/home", true);
    }

    private class RegisterForm
    {
        [System.ComponentModel.DataAnnotations.Required]
        public string Email { get; set; } = "";

        [System.ComponentModel.DataAnnotations.Required]
        public string Password { get; set; } = "";

        [System.ComponentModel.DataAnnotations.Required]
        public string ConfirmPassword { get; set; } = "";

        public string Role { get; set; } = "Passenger";
    }
}
